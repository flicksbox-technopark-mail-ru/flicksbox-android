<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_wrapper"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="@color/main"
    android:layout_gravity="fill"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_header_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/card_poster"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:contentDescription="@string/content_title_en"
        android:src="@drawable/pulpfiction_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/content_header_wrapper"
        app:layout_constraintTop_toTopOf="@+id/content_header_wrapper" />

    <TextView
        android:id="@+id/content_title_ru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/content_title_ru"
        android:textColor="@color/white"
        android:textSize="@dimen/font_s"
        app:layout_constraintStart_toStartOf="@+id/card_poster"
        app:layout_constraintBottom_toBottomOf="@+id/card_poster" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/card_buttons_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/card_title">
            <include layout="@layout/cards_buttons_layout" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
