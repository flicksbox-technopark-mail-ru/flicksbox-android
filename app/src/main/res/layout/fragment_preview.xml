<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".content.main.PreviewFragment"
    android:id="@+id/content_preview"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_preview_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/content_poster"
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:contentDescription="@string/content_title"
            android:src="@drawable/pulpfiction_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/content_preview_wrapper"
            app:layout_constraintTop_toTopOf="@+id/content_preview_wrapper" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:foreground="@drawable/content_gradient"
            app:layout_constraintBottom_toBottomOf="@+id/content_poster"
            app:layout_constraintEnd_toEndOf="parent">

        </FrameLayout>

        <ImageButton
            android:id="@+id/content_button_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_s"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/nav_btn"
            android:src="@drawable/ic_user">
        </ImageButton>

        <ImageButton
            android:id="@+id/content_button_search"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/content_button_profile"
            android:background="@drawable/nav_btn"
            android:src="@drawable/ic_search">
        </ImageButton>

        <TextView
            android:id="@+id/preview_title_ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_s"
            android:layout_marginBottom="40dp"
            android:text="@string/content_title"
            android:textColor="@color/white"
            android:textSize="@dimen/font_l"
            app:layout_constraintBottom_toBottomOf="@+id/content_poster"
            app:layout_constraintStart_toStartOf="@+id/content_poster"/>

        <TextView
            android:id="@+id/preview_title_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_s"
            android:layout_marginBottom="20dp"
            android:text="@string/content_title"
            android:textColor="@color/white"
            android:textSize="@dimen/font_m"
            app:layout_constraintTop_toBottomOf="@+id/preview_title_ru"
            app:layout_constraintStart_toStartOf="@+id/content_poster"/>

        <LinearLayout
            android:id="@+id/preview_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="76dp"
            android:layout_marginEnd="@dimen/margin_end_s"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/content_button_play"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/nav_btn"
                android:src="@drawable/ic_play" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/preview_play_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/font_xs" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/preview_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/margin_end_s"
            app:layout_constraintTop_toBottomOf="@+id/preview_play"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/content_button_add"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/nav_btn"
                android:src="@drawable/ic_question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/preview_info_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/font_xs" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>